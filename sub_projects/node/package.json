    "prettier": "^2.8.8",
    "serialport": "^12.0.0",
    "sqlite3": "^5.1.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.4.3",
    "vite": "~4.3.9"
  }
